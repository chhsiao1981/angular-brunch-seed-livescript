mod = {}

mod.{{project_camelcase}}Ctrl = <[$scope $location $resource $rootScope]> ++ (s, $location, $resource, $rootScope) ->
  s <<< {$location}

  s.$watch '$location.path()' (activeNavId or '/') ->
    s <<< {activeNavId}

  s.getClass = (id) ->
    if s.activeNavId.substring 0 id.length is id
      'active'
    else
      ''

angular.module '{{project}}.controllers' <[{{project}}.services]> .controller mod